{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "cd Client && npm install",
        "buildCommand": "cd Client && npm run build"
      }
    },
    {
      "src": "Server/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Server/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Client/$1"
    }
  ]
} 